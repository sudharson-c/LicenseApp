<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>License App</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css"> 
</head>
<body>
     <script>
        let i=0
     </script>   
    <div class="container">

        <center><h1>Your Files</h1></center>

        <a href="/files/new" class="btn btn-primary mb-3">Upload New File</a>

        <div id="fileList" class="files">
            <% filesData.forEach(fileD => { %>
                <div class="card files mb-3">
                    <div class="card-body">
                        <h3 class="card-title fileTitle"><%= fileD.title %></h3>
                        <iframe src="/uploads/<%=fileD.imgSrc %>" alt="fileImage" style="width: 100%;height:300px;" class="card-img-top fileImage">
                            </iframe>
                        <p class="card-text fileText"><%= fileD.description %></p>
                        <a href="/uploads/<%= fileD.imgSrc %>" class="btn btn-primary" download><button class="btn btn-primary saveFile">Save</button></a>
                        <form action="/files/<%= fileD._id %>" method="GET">
                            <button type="submit" class="btn btn-info viewFile" >View</button>
                        </form>
                        <form action="/files/<%= fileD._id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger" >Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('uploadFile').addEventListener('change', function (e) {
            var fileName = e.target.files[0].name;
            var nextSibling = e.target.nextElementSibling;
            nextSibling.innerText = fileName;
        });

    </script>
</body>
</html>
